-- 테이블 생성
CREATE TABLE SHOP_DISCOUNT (
    DCNT_SEQ NUMBER(16) NOT NULL
    ,DCNT_NAME VARCHAR2(50)
    ,DCNT_PRICE NUMBER(18,4) NOT NULL
    ,DCNT_TYPE VARCHAR2(1) NOT NULL
    ,DCNT_START_DATE DATE NOT NULL
    ,DCNT_END_DATE DATE NOT NULL
    ,DCNT_REG_ID VARCHAR2(10) NOT NULL
    ,DCNT_REG_DATE DATE DEFAULT SYSDATE NOT NULL
    ,DCNT_MOD_ID VARCHAR2(50)
    ,DCNT_MOD_DATE DATE
);

ALTER TABLE SHOP_DISCOUNT
ADD CONSTRAINT PK_DCNT_SEQ PRIMARY KEY(DCNT_SEQ);

-- 컬럼 코멘트
COMMENT ON TABLE SHOP_DISCOUNT IS '가격할인 관리';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_SEQ IS '가격할인 아이디';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_NAME IS '가격할인명';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_PRICE IS '상품가격';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_TYPE IS '가격할인 타입';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_START_DATE IS '시작일';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_END_DATE IS '종료일';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_REG_ID IS '등록자';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_REG_DATE IS '등록일';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_MOD_ID IS '수정자';
COMMENT ON COLUMN SHOP_DISCOUNT.DCNT_MOD_DATE IS '수정일';

CREATE TABLE SHOP_PRODUCT_DISCOUNT (
	PRDT_CODE VARCHAR2(10) NOT NULL
    ,DCNT_SEQ NUMBER(16) NOT NULL
    ,PRDT_DCNT_REGID VARCHAR2(10) NOT NULL
    ,PRDT_DCNT_REGDATE DATE DEFAULT SYSDATE NOT NULL
);

COMMENT ON TABLE SHOP_PRODUCT_DISCOUNT IS '상품 가격할인 관리';
COMMENT ON COLUMN SHOP_PRODUCT_DISCOUNT.PRDT_CODE IS '상품 코드';
COMMENT ON COLUMN SHOP_PRODUCT_DISCOUNT.DCNT_SEQ IS '가격할인 아이디';
COMMENT ON COLUMN SHOP_PRODUCT_DISCOUNT.PRDT_DCNT_REGID IS '등록자';
COMMENT ON COLUMN SHOP_PRODUCT_DISCOUNT.PRDT_DCNT_REGDATE IS '등록일';