-- 테이블 생성
CREATE TABLE TB_PRODUCT_DISCOUNT (
    PRODUT_CODE VARCHAR2(10) NOT NULL
    , PRODUCT_DISCOUNT_PRICE NUMBER(18,4) NOT NULL
    , PRODUCT_DISCOUNT_START_DATE DATE NOT NULL
    , PRODUCT_DISCOUNT_END_DATE DATE NOT NULL
    , PRODUCT_DISCOUNT_REGID VARCHAR2(10) NOT NULL
    , PRODUCT_DISCOUNT_REGDATE DATE DEFAULT SYSDATE NOT NULL
    , PRODUCT_DISCOUNT_MODID VARCHAR2(50)
    , PRODUCT_DISCOUNT_MODATE DATE
);

-- 컬럼 코멘트
COMMENT ON TABLE TB_PRODUCT_DISCOUNT IS '상품 할인가격 관리';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_CODE IS '상품코드';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_PRICE IS '상품가격';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_START_DATE IS '시작일';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_END_DATE IS '종료일';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_REG_ID IS '등록자';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_REG_DATE IS '등록일';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_MOD_ID IS '수정자';
COMMENT ON COLUMN TB_PRODUCT_DISCOUNT.PRODUCT_DISCOUNT_MOD_DATE IS '수정일';